
<div class="index_banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://res.cloudinary.com/erezfriemagor/image/upload/v1538658874/pexels-photo-1148998.jpg');">

  <h2>Log in</h2>


  <div class="sign_form">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <p>Email</p>

      <%= f.input :email, required: false, autofocus: true,:label =>

      false, :input_html => {:maxlength => 15, :size => 40} %>

      <p>Password</p>

      <%= f.input :password, required: false,:label =>
     false, :input_html => {:maxlength => 15, :size => 40} %>

      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable?%>
      <div style="display: flex; flex-direction: column;">
      <%= f.button :submit, "Log in", class: "btn btn-primary" %>
      <br>
      <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>

render "devise/shared/links" %>
</div>

