<div class="index_banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://res.cloudinary.com/erezfriemagor/image/upload/v1545252788/pexels-photo-235554.jpg');">
<table style="width:100%">
<tr>
    <th>From</th>
    <th></th>
    <th>Received</th>
  </tr>
<%@parent_messages.each do |m|%>
 <tr>
    <td><%=@parents[m.sending_parent_id].name%></td>
    <td> <div class="trainershowcircle" style="background-image: url(<%=@parents[m.sending_parent_id].photo%>)"></div></td>
    <td><%=m.date%> <%=m.time.hour%>:<%=m.time.min%></td>
</tr>


 <%end%>
</table>
</div>

<style>
 .trainershowcircle {
     position: relative;
     border-radius: 49.99%;
