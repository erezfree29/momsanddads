       <div class="trainershowinformations">
        <div class="small">
         <div class="trainershowinforow"><div class="underline">Name</div>: <%=@parent.name=%> <%=@parent.name=%></div>
         <div class="trainershowinforow"><div class="underline">Sexual Orientation: </div><%=@parent.sorientation=%> </div>
         <div class="trainershowinforow"><div class="underline">Country:</div><%=@parent.countryname%> </div>
         <div class="trainershowinforow"><div class="underline">City/Town:</div><%=@parent.town=%> </div>
         <div class="trainershowinforow"><div class="underline">Neighborhood:</div><%=@parent.neighborhood=%></div>
         <div class="trainershowinforow"><div class="underline">Age:</div><%=@parent.age=%></div>
         <div class="trainershowinforow"><div class="underline">preferred co-parent:</div><%=@parent.intrested=%></div>
         <div class="trainershowinforow"><div class="underline">about me:</div></div><div class="white"><%=@parent.about=%></div>
         <% if @parent.partner != nil%>
            <div class="trainershowinforow"><div class="underline">about my partner:</div></div><div class="white"><%=@parent.partner=%></div>
         <%end%>
          <% if @parent.sorientation == "straight man"%> %>
          <style> .underline{color:rgb(153, 255, 51);}</style>
           <% elsif @parent.sorientation == "gay couple"%>
           <style> .underline{color:rgb(153, 204, 255);}</style>
           <% elsif @parent.sorientation == "lesbian couple"%>
           <style> .underline{color:rgb(255, 255, 0)};</style>
           <% elsif @parent.sorientation == "straight woman"%>
           <style> .underline{color:rgb(153, 204, 0)};</style>
           <% elsif @parent.sorientation == "lesbian woman"%>
           <style> .underline{color:rgb(255, 102, 102);}</style>
           <% elsif @parent.sorientation == "gay man"%>
           <style> .underline{color:rgb(204, 0, 153);}</style>
           <% elsif @parent.sorientation == "transgender man"%>P
           <style> .underline{color:rgb(153, 153, 102);}</style>
           <%else%>
            <style> .underline{color:rgb(153, 0, 255);}</style>
          <%end%>
       </div>
       </div>
     </div>
         <% if @parent.user_id != current_user.id%><div>
          <%= link_to "send a message",  new_parent_message_path(@parent), class: "btn btn-primary align"%><%end%>
          <% if @parent.user_id == current_user.id%><div>
          <%= link_to "my messages",  new_parent_message_path(@parent), class: "btn btn-primary align"%><%end%>
   </div>


 </div>



