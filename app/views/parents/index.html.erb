  <%= %>

  <%= form_tag parents_path,class: "search",method: :get do %>
  <div class="title country">country</div>
  <%= select_tag(:country, options_for_select(@countrynames ,params[:country]))%>
  <div class="title town">town</div>
  <%= text_field_tag :town, params[:town] %>
  <div class="title age">age</div>
  <%= select_tag(:age, options_for_select([['20-25'],['25-30'],['31-35'],['36-40'],['41-45'],['46-50'],['51-60'],['61-70'],['70+']] ,params[:age]))%>
  <div class="title orientation">orientation</div>
