<script>
 $( document ).ready(function() {


  let current = 0;

  function nextBackground() {


   if (current == 0)
   {


     $("h1").css("width","500px");
     $("h2").css("visibility","hidden");
     $("h2").css("margin-top","-140px");


   }


   else if (current ==1)
   {

     $("h1").css("width","650px");
     $("h2").css("visibility","visible");
     $("h2").css("margin-top","10px");

   }

   else if (current == 2)
   {

     $("h1").css("width","800px");
     $("h2").css("visibility","hidden");
     $("h2").css("margin-top","-140px");

   }

   else
   {

     $("h1").css("width","950px");
     $("h2").css("visibility","visible");
     $("h2").css("margin-top","10px");
     current = -1;
   }

   current ++;


 }


 setInterval(function(){nextBackground();},5000);



});



</script>
